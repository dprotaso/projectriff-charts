{
    "name": "riff",
    "version": "0.0.0",
    "schemaVersion": "v1.0.0-WD",
    "description": "riff is for functions",
    "keywords": [
        "riff"
    ],
    "maintainers": [
        {
            "name": "Swapnil Bawaskar",
            "email": "sbawaska@pivotal.io",
            "url": "https://projectriff.io"
        }
    ],
    "invocationImages": {
        "cnab": {
            "name": "cnab",
            "builder": "docker",
            "configuration": {
                "registry": "projectriff"
            }
        }
    },
    "credentials": {
        "kubeconfig": {
            "path": "/root/.kube/config"
        }
    },
    "parameters": {
        "fields": {
            "node_port": {
                "definition": "node_port",
                "applyTo": [
                    "install"
                ],
                "description": "access kubernetes services via NodePort rather than LoadBalancer.",
                "destination": {
                    "env": "NODE_PORT"
                }
            }
        }
    },
    "definitions": {
        "node_port": {
            "default": "false",
            "type": "boolean"
        }
    }
}
